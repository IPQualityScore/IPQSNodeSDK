{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2019","dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@src/*": ["src/*"],
    }
  },
  "files": [
    "src/index.ts"
  ]
}
